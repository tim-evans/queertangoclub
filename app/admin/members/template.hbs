{{title "Members"}}

<div id="members">
  <div class="frame">
    <header>
      <h2>
        {{search-field query=q onquery=(action (mut q)) placeholder="Members"}}
      </h2>
    </header>
    <nav>
      <hr>
      {{#action-link action=(action (mut isAdding) true)}}
        {{icon "happy"}} Add Member
      {{/action-link}}
      {{#if isAdding}}
        {{dialog-box (component 'new-member-dialog'
            onsubmit=(route-action 'createMember'))
          ondismiss=(action (mut isAdding) false)}}
      {{/if}}
    </nav>
  </div>
  {{sortable-list columns=(list 'name' 'email') rows=model href='admin.member' sort=sort}}
</div>