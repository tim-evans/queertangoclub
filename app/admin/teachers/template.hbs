{{title "Teachers"}}

<div id="teachers">
  <div class="frame">
    <header>
      <h2>
        {{search-field query=q onquery=(action (mut q)) placeholder="Teachers"}}
      </h2>
    </header>
    <nav>
      <hr>
      {{#action-link action=(action (mut isAdding) true)}}
        {{icon "fan"}} Add Teacher
      {{/action-link}}
      {{#if isAdding}}
        {{dialog-box (component 'new-teacher-dialog'
            onsubmit=(route-action 'createTeacher'))
          ondismiss=(action (mut isAdding) false)}}
      {{/if}}
    </nav>
  </div>
  {{sortable-list columns=(list 'name') load=(route-action 'load') rows=model.model total=model.meta.page.total href='admin.teacher' sort=sort icon='fan'}}
</div>