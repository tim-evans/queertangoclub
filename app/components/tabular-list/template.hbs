<div class="table">
  <div class="table-header thin-border-bottom">
    <div class="frame">
      <div class="flex-row">
        {{#each columns as |column|}}
          {{#link-to (query-params sort=(if (equals sort column.key) (concat '-' column.key) column.key))
            class=(concat "table-cell " (dasherize column.key) " " (if (equals sortBy column.key) (concat direction " active")))}}
            {{capitalize column.label}}
            {{icon 'down-chevron'}}
          {{/link-to}}
        {{/each}}
      </div>
    </div>
  </div>
  <div class="table-body">
    {{#each rows as |row|}}
      {{#link-to href row}}
        <span class="frame">
          <span class="flex-row">
            {{#each columns as |column|}}
              <span class="table-cell {{dasherize column.key}}">
                {{#with (get row column.key) as |value|}}
                  {{#if value.getTime}}
                    {{l 'date' value}}
                  {{else}}
                    {{value}}
                  {{/if}}
                {{/with}}
              </span>
            {{/each}}
          </span>
        </span>
      {{/link-to}}
    {{else}}
      <br>
      <div class="smcp align-center">
        {{icon 'sad' class='empty-state'}}
        <br>
        No Results Found
      </div>
    {{/each}}
  </div>
</div>
