{{#if label}}<label for={{inputId}}>{{label}}</label>{{/if}}
{{#component fieldType inputId=inputId
                      name=name
                      accept=accept
                      placeholder=placeholder
                      value=(get model fieldName)
                      onchange=(action onchange model fieldName)
                      rows=rows as |arg1|}}
  {{yield arg1}}
{{else}}
  {{yield to='inverse'}}
{{/component}}