{{#if label}}<label for={{inputId}}>{{label}}</label>{{/if}}
{{#component fieldType
  inputId=inputId
  name=name
  accept=accept
  placeholder=placeholder
  value=(if fieldName (get model fieldName) model)
  key=key
  multiple=multiple
  onblur=onblur
  ondelete=ondelete
  onchange=(action onchange model (if fieldName fieldName index))
  onquery=(action 'query')
  rows=rows as |arg1|}}
  {{yield arg1}}
{{else}}
  {{yield to='inverse'}}
{{/component}}